<script>
	function Change(){
		//alert(getCookie("kind"));
		skind = document.getElementById("skind").value;
		document.cookie="kind="+skind;
		//alert(getCookie("kind"));
		//alert(skind);
		//document.cookie="kind="+skind;
		window.location.reload();
		//alert(document.cookie.match("skind"));
		//var {{ lis }}
	}
	function Change2(){
		//alert(getCookie("kind"));
		skind = document.getElementById("sta").value;
		document.cookie="sta="+sta;
		//alert(getCookie("kind"));
		//alert(skind);
		//document.cookie="kind="+skind;
		window.location.reload();
		//alert(document.cookie.match("skind"));
		//var {{ lis }}
	}
	function getCookie(name) 
	{ 
    var arr,reg=new RegExp("(^| )"+name+"=([^;]*)(;|$)");
    if(arr=document.cookie.match(reg))
        return unescape(arr[2]); 
    else 
        return null; 
	}

</script>
